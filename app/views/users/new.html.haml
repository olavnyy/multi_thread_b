- if current_user.nil?
  %h1 Sign Up
  = simple_form_for @user, html: { class: 'form-horizontal' } do |f|
    .form-group
      = f.label :email, class: 'col-sm-4 control-label'
      .col-sm-8
        = f.input_field :email, required: true, autocomplete: 'off', placeholder: "Email", class: 'col-sm-10 form-control', id: 'inputEmail3', size: 40, maxlength: 40
        = f.error :email
    .form-group
      = f.label :password, class: 'col-sm-4 control-label'
      .col-sm-8
        = f.input_field :password, type: :password, required: true, autocomplete: 'off', placeholder: "Password", class: 'col-sm-10 form-control', id: 'inputEmail3', size: 40, maxlength: 40
        = f.error :password
    .form-group
      = f.label :password_confirmation, class: 'col-sm-4 control-label'
      .col-sm-8
        = f.input_field :password_confirmation, type: :password, required: true, autocomplete: 'off', placeholder: "Password confirmation", class: 'col-sm-10 form-control', id: 'inputEmail3', size: 40, maxlength: 40
        = f.error :password_confirmation
    = f.button :submit, I18n.t('general.create'), id: 'add_new_teacher', class: 'button btn btn-green'
